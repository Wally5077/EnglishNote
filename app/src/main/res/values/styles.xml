<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainColor</item>
    </style>

    <style name="disableUnderLineEditText">
        <item name="colorControlNormal">#00FFFFFF</item>
        <item name="colorControlActivated">#00FFFFFF</item>
    </style>

    <style name="VocabSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">8sp</item>
        <item name="android:textColorHint">@color/secondaryGrey</item>
    </style>

    <style name="NavigationTheme">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/avenirmedium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">12.5dp</item>
        <item name="android:layout_marginTop">12.5dp</item>
    </style>

    <style name="progressLoading" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/bg_progress_loading</item>
    </style>
</resources>
