<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="27.5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dictionary_item_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/dictionaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Dictionary 1"
            android:textColor="@color/secondaryGrey"
            android:textSize="13sp"
            app:fontFamily="@font/avenirheavy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="18sp" />

        <TextView
            android:id="@+id/dictionaryDescription"
            android:layout_width="177.5dp"
            android:layout_height="35dp"
            android:gravity="start"
            android:maxLength="57"
            android:text="description Excepteur sint occaecat cupidatat non proidentâ€¦"
            android:textColor="@color/thirdColor"
            android:textSize="11sp"
            app:fontFamily="@font/avenirroman"
            app:layout_constraintStart_toStartOf="@+id/dictionaryTitle"
            app:layout_constraintTop_toBottomOf="@+id/dictionaryTitle"
            app:lineHeight="15sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2.5dp"
            android:gravity="bottom"
            android:text="Read more"
            android:textColor="@color/mainColor"
            android:textSize="8sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/dictionaryDescription"
            app:layout_constraintEnd_toEndOf="@+id/dictionaryDescription" />

        <Button
            android:id="@+id/exploreButton"
            android:layout_width="47.5dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_item_dictionary_button"
            android:text="Explore"
            android:paddingBottom="3dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="8sp"
            app:fontFamily="@font/avenirbook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lineHeight="8sp" />

        <ImageView
            android:id="@+id/dictionaryImage1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="17.5dp"
            android:layout_marginEnd="52.5dp"
            android:layout_marginRight="52.5dp"
            android:background="@drawable/pear_hydrosol_pyrus_communis_hydrolat_product_pic"
            android:elevation="1dp"
            app:layout_constraintEnd_toEndOf="@+id/dictionaryImage2"
            app:layout_constraintTop_toTopOf="@+id/dictionaryImage2" />

        <ImageView
            android:id="@+id/dictionaryImage2"
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/guava_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dictionaryDescription" />

        <ImageView
            android:id="@+id/dictionaryImage3"
            android:layout_width="52.5dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="22.5dp"
            app:layout_constraintStart_toEndOf="@+id/dictionaryImage1"
            app:layout_constraintTop_toTopOf="@+id/dictionaryImage1"
            app:srcCompat="@drawable/china_fresh_sweet_delicious_red_fruit_apples_jpg_350_x_350" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>