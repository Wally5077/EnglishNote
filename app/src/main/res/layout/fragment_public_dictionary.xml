<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dictionaryContentSearchView"
        android:layout_width="167.5dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/vocab_search_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_search_category_default" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginStart="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="search"
            android:textAlignment="center"
            android:textColor="#948999A0"
            android:textSize="8sp"
            android:textStyle="italic"
            app:fontFamily="@font/avenirbook"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <!--        <EditText-->
        <!--            android:id="@+id/dictionaryContentSearch"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:paddingStart="20dp"-->
        <!--            android:paddingLeft="20dp"-->
        <!--            android:paddingEnd="5dp"-->
        <!--            android:paddingRight="5dp"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dictionaryContentFavoriteButton"
        android:layout_width="47.5dp"
        android:layout_height="17.5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_modify_green_round_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dictionaryContentSearchView">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="2.5dp"
            android:layout_marginRight="2.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView13"
            app:layout_constraintEnd_toStartOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="@+id/textView13"
            app:srcCompat="@drawable/favorite_hollow" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="7.5dp"
            android:layout_marginRight="7.5dp"
            android:text="Favorite"
            android:textColor="@color/mainWhite"
            android:textSize="7sp"
            app:fontFamily="@font/avenirroman"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/dictionaryContentDictionaryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="DictionaryName"
        android:textAlignment="center"
        android:textColor="@color/mainColor"
        android:textSize="20sp"
        app:fontFamily="@font/avenirmedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dictionaryContentSearchView"
        app:lineHeight="27sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/WordGroupContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="127.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>