<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/mainColor">

    <ImageView
        android:id="@+id/headViewMemberPhoto"
        android:layout_width="67.5dp"
        android:layout_height="67.5dp"
        android:layout_marginStart="22.5dp"
        android:layout_marginLeft="22.5dp"
        android:background="@drawable/big_user_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headViewMemberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.5dp"
        android:layout_marginLeft="12.5dp"
        android:text="User name"
        android:textColor="@color/mainWhite"
        android:textSize="15sp"
        app:fontFamily="@font/avenirmedium"
        app:layout_constraintBottom_toBottomOf="@+id/headViewMemberPhoto"
        app:layout_constraintStart_toEndOf="@+id/headViewMemberPhoto"
        app:layout_constraintTop_toTopOf="@+id/headViewMemberPhoto"
        app:lineHeight="20sp" />

</androidx.constraintlayout.widget.ConstraintLayout>